        >{{sortOption.name}}</option>
      {{/each}}
    </select>
  </div> --}}

  {{#if this.isRepoDataIncomplete}}
    <p class="text-gray-600 flex gap-2 mb-6">Loading additonal repo details
      <div role="status">
        <Icons::Spinner />
        <span class="sr-only">Loading...</span>
      </div>
    </p>
  {{/if}}

  {{yield this.visibleRepos}}
</div>