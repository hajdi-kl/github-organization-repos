<ul role='list' class='divide-y divide-gray-100 border-b-2 border-b-gray-100'>
  {{#each this.tokens as |token|}}
    <li class='flex justify-between gap-x-6 py-5'>
      <div class='flex min-w-0 gap-x-4'>
        <img
          class='size-12 flex-none rounded-full bg-gray-50'
          src={{token.user.avatar_url}}
          alt=''
        />
        <div class='min-w-0 flex-auto'>
          <p
            class='text-sm/6 font-semibold text-gray-900'
          >{{token.user.name}}</p>
          <p
            class='mt-1 truncate text-xs/5 text-gray-500'
          >{{token.user.login}}</p>
        </div>
      </div>
      <div class='hidden shrink-0 sm:flex sm:flex-col sm:items-end'>
        <button
          type='button'
          {{on 'click' (fn this.invalidateToken token.id)}}
          class='px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 hover:bg-gray-100 hover:text-red-600 focus:z-10 focus:ring-2 focus:ring-sky-700 focus:text-red-600 rounded-lg'
          disabled={{this.isInvalidating}}
        >
          Revoke
        </button>
      </div>
    </li>
  {{/each}}
</ul>
<div class='mt-5'>
  <Tokens::Add @heading='Add another token' @info='' />
</div>